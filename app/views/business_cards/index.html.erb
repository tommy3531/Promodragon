
<div class="row">
  <div class="col-sm-6">
    <h1>Social Card</h1>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Imdb</th>
        <th>Twitter</th> 
      </tr>
    </thead>
    <tbody>
        <% if @business_cards.nil? %>
            <td><%= link_to 'Show', business_cards_path %></td>
          <% else %>
          <% @business_cards.each do |business_card| %>
            <%= content_tag :tr, id: dom_id(business_card), class: dom_class(business_card) do %>
                <td><%= business_card.imdb %></td>
                <td><%= business_card.twitter %></td>          
                <td><%= link_to 'Show', business_card %></td>
            <% end %>
          <% end %>
        <% end %>
    </tbody>
  </table>
</div>
