<h1>Profiles</h1>

<h1><%= @user.first_name %></h1>


<div class="page-header">
  <small>Submitted by <%= current_user.first_name %></small></h1>
</div>

<div class="btn-group">
    <% if @cards.present? %>
        <% @cards.each do |card| %>
            <%= link_to 'Visit IMDB', card.imdb, class: "btn btn-primary" %>
            <%= link_to 'Visit Twitter', card.twitter, class: "btn btn-primary" %>
        <% end %>
    <% end %>
    <% @cards.each do |card| %>
        <% if card.user_id == current_user.id -%>
            <div class="btn-group">
                <%= link_to 'Edit', edit_business_card_path(card.id), class: "btn btn-default" %>
            </div>
        <% end %>
    <% end %>
</div>

